
<div class="container"> <!-- ここを追加 -->
      <div class="row">
             <div class="col-xs-4">

            <div><h1>ユーザー</h1>
<h2><%= @books.user.name %></h2>
<h2>Introduction<br><%= @books.user.introduction %></h2>
<button type="button" class="btn btn-primary btn-lg active"><%= link_to 'ユーザー編集', edit_user_path(current_user.id)%></button><br>
<%= attachment_image_tag @books.user, :image, :fill, 100, 100,fallback:'no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6', format: 'jpeg', class: "img-circle profile-img" %></div>
        
        





        <div><h1>新規投稿</h1>
<!-- form_for部分 -->


             <%= form_for(@book) do |f| %>
                <h4>タイトル</h4>
                <%= f.text_field :title %>
                <h4>本文</h4>
                <%= f.text_area :body %>
                <%= f.submit '投稿' %>
            <% end %></div>
</div>



<%= flash[:notice]%>
<div class="col-xs-8"> 
	<h2>Book detail</h2>

          <table class="table">
            <thead>
            <tbody>
                <tr>
                  <td><h2><%= @books.user.name %></h2></td>
                  <td><%= attachment_image_tag @books.user, :image,  fallback:'no_image.jpg',format: 'jpeg', class: "img-circle pull-left profile-img",size: '100x100' %></td>
                  <td><h1>タイトル</h1></td>
                  <td><h2><%= @book.title %></h2></td>
                  <td><h1>本文</h1></td>
                  <td><h2><%= @book.body %></h2></td>
                </tr>
          </thead>
          </tbody>
        </table>


                  <li><button type="button" class="btn btn-primary btn-lg active"><%= link_to "戻る", books_path %></button></li>
                  <% if @book.user == current_user %></li>
                  <li><button type="button" class="btn btn-primary btn-lg active"><%= link_to "編集", edit_book_path(@book.id) %></button></li>
                  <% end %>
                  <% if @book.user == current_user %>
                  <li>
                    <button type="button" class="btn btn-primary btn-lg active"><%= link_to "削除", book_path(@book.id), method: :delete ,"data-confirm" => "本当に削除しますか？" %></button>
                  </li>
              <% end %>
</ul>
</div>
</div>
</div>