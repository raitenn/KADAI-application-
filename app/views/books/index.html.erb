<div class="container"> <!-- ここを追加 -->
      <div class="row">
             <div class="col-xs-4">

            <div><h1>ユーザー</h1>
<h2><%= current_user.name %></h2>
<h2>Introduction<br><%= current_user.introduction %></h2>
<button type="button" class="btn btn-primary btn-lg active"><%= link_to 'ユーザー編集', edit_user_path(current_user.id),class: "btncolor"%></button><br>
<%= attachment_image_tag current_user, :image, :fill, 100, 100, fallback:'no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6', format: 'jpeg', class: "img-circle profile-img" %></div>

<div><h1>新規投稿</h1>
<!-- form_for部分 -->


             <%= form_for(@book) do |f| %>

              <% if @book.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <h4>タイトル</h4>
                <%= f.text_field :title %>
                <h4>本文</h4>
                <%= f.text_area :body %>
                <input type="submit" name="commit" value="投稿" data-disable-with="投稿" class="btn btn-primary btn-lg active">
                
            <% end %></div>
</div>
<div class="col-xs-8"> 
            <div>
             <h1>投稿一覧</h1>
            <table class="table">
                <thead>
                <tr>
                    <td>タイトル</td>
                    <td>本分</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
                <% @books.each do |book| %>
                <tbody>
                    <tr>
                        <td><%= attachment_image_tag book.user, :image,  fallback:'no_image.jpg',format: 'jpeg', class: "img-circle pull-left profile-img",size: '100x100' %></td>
                        <td><%= book.title %></td>
                        <td><%= book.body %></td>
                        
                        <td><button type="button" class="btn btn-primary btn-lg active"><%=link_to '表示', book_path(book.id),class: "btncolor" %></button></td>
                        
                    </tr>
                </tbody>
                <% end %>
               </table>
              </div>
            </div>
           </div>
          </div>

