
<div class="container"> <!-- ここを追加 -->
      <div class="row">
             <div class="col-xs-4">

            <div><h1>ユーザー</h1>
<h2><%= @user.name %></h2>
<h2>Introduction<br><%= @user.introduction %></h2>
<%= link_to 'ユーザー編集', edit_user_path(current_user.id)%><br>
<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', class: "img-circle profile-img" %></div>





        
<div><h1>新規投稿</h1>
<!-- form_for部分 -->


             <%= form_for(@book) do |f| %>
                <h4>タイトル</h4>
                <%= f.text_field :title %>
                <h4>本文</h4>
                <%= f.text_area :body %>
                <%= f.submit '投稿' %>
            <% end %></div>
</div>



<%= flash[:notice]%>
<div class="col-xs-8">
<h2>Books</h2>
<table class ="table">
    <thead>

<tr>

<td><h1>タイトル</h1></td>
<%= @book.title %>
<td><h1>本文</h1></td>
</tr>
</thead>
<% @user.books.each do |book| %>
<tbody>
     <tr>
	     <td><%= book.title %></td>
	     <td><%= book.body%></td>
	 </tr>
    </tbody>
	 <% end %>
</table>
</div>

</div>
</div>
